    <nav>
      <a href="/"><img src="/images/foodcart-logo.png" alt="foodcart-logo" id="foodcart-logo"></a>
      |
      <a href="/reviews/" <%- title === 'Reviews' ? 'class="active"' : '' %>>Reviews</a>
      |
      <a href="/vendors/" <%- title === 'Vendors' ? 'class="active"' : '' %>>Vendors</a>
      |
      <% if (user) { %>
        <a href="/reviews/new" <%- title === 'Add Review' ? 'class="active"' : '' %>>Add Review</a>
      |
        <img alt="avatar" id="nav-avatar" src="<%= user.avatar %>" referrerpolicy="no-referrer" ><%= user.name %>
      |
        <a href="/logout">LOG OUT</a>
      <% } else { %> 
      <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png" id="google-logo"></a>
        <% } %>
    </nav>
