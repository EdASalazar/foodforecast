<%- include('../partials/header') %>
    <section id="add-review">
        <form action="/reviews" method="POST" id="form-review">

            <label>Vendor:</label>
                <input type="text" name="vendor" placeholder="Required">
            

            <label>Rating:</label>
                <select name="rating">
                    <option value="0">Required Field</option>
                    <option value="1">Skip It!</option>
                    <option value="2">I mean you're here and you're drunk!</option>
                    <option value="3">Sure, why not?</option>
                    <option value="4">It's only a little out of the way!</option>
                    <option value="5">Plan a road trip!</option>
                </select>
            <label>Price:</label>
                <select name="price">
                    <option value="0">Required Field</option>
                    <option value="1">Less than $5 per person</option>
                    <option value="2">$5 - $10 per person</option>
                    <option value="3">$10-$15 per person</option>
                    <option value="4">$15-$20 per person</option>
                    <option value="5">$20 and up</option>
                </select>
                <label>Tell us how you really feel: </label>
                    <textarea name="blog" id="blog" cols="25" rows="3" placeholder="Required"></textarea>
                  
                <br>

             <h4>Add Image:</h4>
                <input id="vendorImg" type="text" name="vendorImg" placeholder="Enter URL">
            <br>
            <button type="submit">Submit Review</button>
        </form>
    </section>

<a href="reveiws/vendor/new">Create Vendor</a>

    <%- include('../partials/footer') %>