<%- include('../partials/header') %>
    
</table>
    <table id="details-reviews">
        <thead>
            <tr>
                <th><img alt="avatar" id="review-avatar" src="<%= review.userAvatar %>" referrerpolicy="no-referrer">
                </th>
                <th>Author</th>
                <th>Vendor</th>
                <th>Rating</th>
                <th>Price</th>
                <th>Created</th>
        </thead>
        <tbody>
            <tr>

                <td><img src="<%= review.vendorImg %>" id="vendor-image"></td>
                <td>
                    <%= review.userName %>
                </td>
                <td>
                    <%= review.vendor.name %>
                </td>
                <td>
                    <%= review.rating %>
                </td>
                <td>
                    <%= review.price %>
                </td>
                <td>
                    <%= review.createdAt.toLocaleDateString() %>
                </td>

                <table id="table-story">
                    <thead>
                        <th>Story</th>
                    </thead>
                    <tr>
                        <td><%- review.blog.replaceAll('\n', '<br>') %>
                            <%= review.blog %>
                        </td>
                    </tr>
                </table>


                
                
                <table id="table-show-comments">
                    <thead>
                        <tr>
                            <th>Feedback</th>
                            <th>Helpfulness</th>
                            <th>Author</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <% comment.forEach(function(c) { %>
                        <tr>
                            <td>
                                <td><%- c.feedback.replaceAll('\n', '<br>') %>
                                <%= c.feedback %>
                            </td>
                            <td>
                                <%= c.rateReview %>
                            </td>
                            <td>
                                <%= c.userName %>
                            </td>
                            <td>
                                <%= c.createdAt.toLocaleDateString() %>
                            </td>
                        </tr>
                        <% }); %>
                        
                    </table>
                    <% if (user) { %>
                        <table id="table-add-comment">
                            <thead>
                               
                                <th>
                                    <form action="/reviews/<%= review.id %>/favorites" method="POST">
                                        <button type="submit">Add it to your favorites!</button>
                                    </form></th>
                                <th>Add A Comment!</th>
                            </thead>
                            <tbody>
                                <form action="/reviews/<%= review.id %>/comments" id="add-comment-form" method="POST">
                                    <tr>
                                        <td>What's on your mind?</td>
                                        <td><textarea name="feedback" rows=1></textarea></td>
                                    </tr>
                                    <tr>
                                        <td> <label> How helpful was this review?</td></label>
                                        <td><select name="rateReview">
                                            <option value="0">Required Field</option>
                                            <option value="1">Not Helpful</option>
                                            <option value="2">Sort of Helpful</option>
                                            <option value="3">Really Helpful</option>
                                        </td>
                                    </tr>
                                </select>
                                <tr>
                                    <td class="button-td"></td>
                                    <td class="button-td"><button type="submit">Submit</button></td>
                                </tr>
                            </form>
                        </tbody>
                    </table>
           
                    
                    <% } %>
                    
                    <% if (user?._id.equals(review.user._id)) { %>
                        <table class="table-buttons">
                            <tr>
                                <td class="button-td">
                                    <form action="/reviews/<%= review.id %>/edit" method="GET"><button
                                            type="submit">EDIT</button>
                                    </form>
                                </td>
                                <td class="button-td">
                                    <form action="/reviews/<%= review.id %>?_method=DELETE" method="POST"><button
                                            type="submit">DELETE</button></form>
                                </td>
                            </tr>
                        </table>
                    <% } %>
 <%- include('../partials/footer') %>