<%- include('../partials/header') %>

    <table id="details-reviews">
        <thead>
            <tr>
                <th><img alt="avatar" src="<%= review.userAvatar %>" referrerpolicy="no-referrer"></th>
                <th>Author</th>
                <th>Vendor</th>
                <th>Rating</th>
                <th>Price</th>
                <th>Story</th>
                <th>Created</th>
            <% if (user?._id.equals(review.user)) { %>
                <th>Edit</th>
                <th>Delete</th>
            <% } %>
        </thead>
        <tbody>
            <tr>

                <td><%= review.vendorImg %></td>
                <td> <%= review.userName %> </td>
                <td><%= review.vendor %></td>
                <td> <%= review.rating %></td>
                <td> <%= review.price %></td>
                <td> <%= review.blog %></td>
                <td><%= review.createdAt %></td>

                <% if (user?._id.equals(review.user)) { %>
                    <td>
                        <form action="/reviews/<%= review.id %>/edit" method="GET"><button type="submit">EDIT</button>
                        </form>
                    </td>
                    <td>
                        <form action="/reviews/<%= review.id %>?_method=DELETE" method="POST"><button
                                type="submit">DELETE</button></form>
                    </td>
                    <% } %>
            </tr>
        </tbody>
    </table>

    <table id="add-comment">
        <thead>
            <tr>
                <th>Feedback</th>
                <th>Helpfulness</th>
                <th>Author</th>
            </tr>
        </thead>
            <% comment.forEach(function(c)  { %> 
               <tr><td> <%= c.feedback %> </td>
                <td> <%= c.rateReview %> </td>
                <td> <%= c.userName %> </td></tr>
            <% }); %>
          
    </table>
    <% if (user) { %>
        <h2>Add Comments</h2>
        <form action="/reviews/<%= review.id %>/comments" id="add-comment-form" method="POST">
            <label>What's on your mind?</label>
                <textarea name="feedback" rows=1></textarea><br>
            <label> How helpful was this review?</label>
            <select name="rateReview">
                <option value="0">Required Field</option>
                <option value="1">Not Helpful</option>
                <option value="2">Sort of Helpful</option>
                <option value="3">Really Helpful</option>
            </select>
            <br>
            <button type="submit">Submit</button>
        </form>


        <% } %>


            <%- include('../partials/footer') %>